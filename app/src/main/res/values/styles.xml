<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/blue_dark</item>
        <item name="android:actionMenuTextColor">@color/blue_dark</item>
    </style>

    <style name="YourPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/dark</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>
